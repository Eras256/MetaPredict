{
  "name": "@metapredict/smart-contracts",
  "version": "1.0.0",
  "type": "module",
  "description": "MetaPredict.fun Smart Contracts",
  "scripts": {
    "fix-binary-market": "hardhat run scripts/fix-binary-market.ts --network opBNBTestnet",
    "fix-conditional-market": "hardhat run scripts/fix-conditional-market.ts --network opBNBTestnet",
    "fix-subjective-market": "hardhat run scripts/fix-subjective-market.ts --network opBNBTestnet",
    "fix-all-markets": "pnpm fix-binary-market && pnpm fix-conditional-market && pnpm fix-subjective-market",
    "verify-all-contracts": "hardhat run scripts/verify-all-contracts.ts --network opBNBTestnet",
    "diagnose-core": "hardhat run scripts/diagnose-core-contract.ts --network opBNBTestnet",
    "redeploy-core": "hardhat run scripts/redeploy-core.ts --network opBNBTestnet",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:e2e": "hardhat test test/end-to-end.test.ts --network opBNBTestnet",
    "test:e2e:verbose": "hardhat test test/end-to-end.test.ts --network opBNBTestnet --verbose",
    "test:complete": "hardhat test test/complete-e2e.test.ts --network opBNBTestnet",
    "test:complete:verbose": "hardhat test test/complete-e2e.test.ts --network opBNBTestnet --verbose",
    "test:chainlink": "hardhat test test/chainlink-integration.test.ts --network opBNBTestnet",
    "test:chainlink:verbose": "hardhat test test/chainlink-integration.test.ts --network opBNBTestnet --verbose",
    "chainlink:e2e": "hardhat run scripts/create-and-resolve-markets-chainlink.ts --network opBNBTestnet",
    "chainlink:real": "hardhat run scripts/test-real-chainlink.ts --network opBNBTestnet",
    "datastreams:test": "hardhat run scripts/test-real-datastreams-price.ts --network opBNBTestnet",
    "chainlink:full": "hardhat run scripts/test-full-chainlink-real.ts --network opBNBTestnet",
    "create:6-markets": "hardhat run scripts/create-6-markets-chainlink-real.ts --network opBNBTestnet",
    "resolve:markets": "hardhat run scripts/resolve-markets-with-links.ts --network opBNBTestnet",
    "test:e2e:real": "hardhat test test/complete-e2e-real.test.ts --network opBNBTestnet",
    "test:chainlink:real": "hardhat test test/chainlink-real-streams.test.ts --network opBNBTestnet",
    "test:all-integrations": "hardhat test test/complete-real-integrations.test.ts --network opBNBTestnet",
    "verify:frontend": "hardhat run scripts/verify-frontend-integration.ts --network opBNBTestnet",
    "update:backend-url": "hardhat run scripts/update-backend-url.ts --network opBNBTestnet",
    "test:security": "hardhat test test/Security.test.ts",
    "test:security:fuzz": "forge test --match-path test/SecurityFuzz.t.sol -vv",
    "test:security:all": "bash test/security-coverage.sh",
    "test:transactions": "hardhat test test/transactions.test.ts --network opBNBTestnet",
    "test:transactions:verbose": "hardhat test test/transactions.test.ts --network opBNBTestnet --verbose",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network opBNBTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network opBNBMainnet",
    "verify": "hardhat verify --network",
    "coverage": "hardhat coverage",
    "coverage:security": "hardhat coverage --testfiles test/Security.test.ts",
    "slither": "slither . --exclude-dependencies --exclude-informational",
    "wallet:check": "npx ts-node scripts/check-wallet-balance.ts",
    "wallet:setup": "npx ts-node scripts/setup-deployment-wallet.ts",
    "balance:check": "node scripts/check-balance-address.js",
    "verify:setup": "npx ts-node scripts/verify-deployment-setup.ts",
    "verify:all": "hardhat run scripts/verify-contracts.ts --network opBNBTestnet",
    "verify:config": "hardhat run scripts/verify-contract-config.ts --network opBNBTestnet",
    "fix:config": "hardhat run scripts/fix-contract-config.ts --network opBNBTestnet",
    "streams:configure": "hardhat run scripts/configure-data-streams-markets.ts --network opBNBTestnet",
    "streams:create-test": "hardhat run scripts/create-test-markets-with-streams.ts --network opBNBTestnet",
    "streams:verify": "hardhat run scripts/verify-price-report.ts --network opBNBTestnet",
    "mock-usdc:deploy": "hardhat run scripts/deploy-mock-usdc.ts --network opBNBTestnet"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@openzeppelin/contracts": "^5.0.0",
    "ethers": "^6.15.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^4.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.3",
    "@nomicfoundation/hardhat-verify": "^3.0.8",
    "@typechain/hardhat": "^9.1.0",
    "@types/node": "^20.0.0",
    "forge-std": "^1.1.2",
    "hardhat": "^3.1.0",
    "hardhat-gas-reporter": "^2.3.0",
    "solidity-coverage": "^0.8.17",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  }
}
